# editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = false
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 4

[*.js]
indent_size = 4

[*.scss]
indent_size = 4

[{package.json,.travis.yml}]
indent_size = 2